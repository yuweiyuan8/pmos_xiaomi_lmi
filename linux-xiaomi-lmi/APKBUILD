# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm64/configs/lmi_defconfig

pkgname=linux-xiaomi-lmi
pkgver=6.11.0
pkgrel=0
pkgdesc="Xiaomi Redmi K30 Pro kernel fork"
arch="aarch64"
_carch="arm64"
_flavor="xiaomi-lmi"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	bc
	bison
	devicepkg-dev
	findutils
	flex
	openssl-dev
	perl
	xz
	linux-headers
	python3
"

# Source
_repository="linux"
_commit="0d745847e67ced310114971a0e6ddc63a0ca4d19"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/yuweiyuan8/sm8250-mainline/$_repository/archive/$_commit.tar.gz
	$_config
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	REPLACE_GCCH=0
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make -j$(nproc) O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" \
		"$_flavor" "$_outdir"
	make dtbs_install modules_install CC="${CC:-gcc}" O="$_outdir" ARCH="$_carch" \
		INSTALL_DTBS_PATH="$pkgdir"/boot/dtbs INSTALL_MOD_PATH="$pkgdir"
}

sha512sums=""
